extends base.pug
include mixinBook.pug

block style 
  style.
          .homeHeader{
        height: 10%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .homeHeader div{
        margin-top: 30px;
      }
      .homeHeader div span{

        font-size: 50px;
        font-weight: Bold;
      }
      .homeMain {
        height: 80%;
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
      }
      .homeMain article {
        width: 50%;
        max-width: 500px;
        height: 450px;
        margin: 50px;
        border-radius: 40px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
      }
      .roomCnt, .isDoor {
        background-color: rgba(0, 136, 169, 1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
      }
      .roomCnt div:first-child, .isDoor div:first-child{
        height: 25%;
        width: 100%;
        border-bottom: 7px solid black;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .pers {
        font-size: 40px;
      }
      .title {
        font-size: 25px;
      }


block btn
  a.cta(href="/book/upload")
    button Upload 
  

block header 
  header.homeHeader 
    div 
      span 예약 게시판
  main.bookMain
    each book in books 
      +book(book)
    else
      div 
        span 현재 예약이 없습니다!