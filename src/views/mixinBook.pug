mixin book(book)
  style.
    .bookset{
      margin: 0 auto;
      margin-top: 50px;
      width: 80%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-top: 2px solid white;
      border-bottom: 2px solid white;
      color: white;
    }
  div.bookset
      h4
        a(href=`/book/${book.id}` class="book_date")=book.date
      p.book_time=book.time
      p.book_student=book.student
      small=book.createdAt
      hr